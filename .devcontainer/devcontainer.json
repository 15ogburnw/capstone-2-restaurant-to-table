{
  "image": "mcr.microsoft.com/devcontainers/ubuntu:jammy",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/akhildevelops/devcontainer-features/apt:latest": {},
    "ghcr.io/devcontainers/features/node:latest": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers-contrib/features/jshint:2": {},
    "ghcr.io/devcontainers-contrib/features/jest:2": {},
    "ghcr.io/devcontainers-contrib/features/tldr:2": {}
 },
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "yarn install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "yarn dev"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "pages/index.js"
      ]
    }
  },

{
	"name": "Ubuntu",

	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-jammy",
	"features": {

		"ghcr.io/devcontainers/features/github-cli:1": {},

		"ghcr.io/devcontainers/features/sshd:1": {},
		"ghcr.io/devcontainers-contrib/features/autoenv:1": {},
		"ghcr.io/devcontainers-contrib/features/curl-apt-get:1": {},
		"ghcr.io/devcontainers-contrib/features/jest:2": {},
		"ghcr.io/devcontainers-contrib/features/jshint:2": {},
		"ghcr.io/devcontainers-contrib/features/localtunnel-npm:1": {},
		"ghcr.io/devcontainers-contrib/features/typescript:2": {},
		"ghcr.io/devcontainers-contrib/features/wget-apt-get:1": {},
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"christian-kohler.npm-intellisense",
				"dbaeumer.vscode-eslint",
				"ms-vscode-remote.vscode-remote-extensionpack",
				"ms-vscode.remote-server",
				"ms-vscode.remote-explorer",
				"mhutchie.git-graph",
				"donjayamanne.githistory",
				"codezombiech.gitignore",
				"esbenp.prettier-vscode",
				"christian-kohler.path-intellisense",
				"redhat.vscode-yaml",
				"formulahendry.auto-rename-tag",
				"formulahendry.auto-close-tag",
				"bradlc.vscode-tailwindcss",
				"Gruntfuggly.todo-tree",
				"leizongmin.node-module-intellisense",
				"vincaslt.highlight-matching-tag",
				"HTMLHint.vscode-htmlhint",
				"kisstkondoros.vscode-gutter-preview",
				"SimonSiefke.svg-preview",
				"yatki.vscode-surround",
				"rangav.vscode-thunder-client",
				"VisualStudioExptTeam.vscodeintellicode-completions",
				"arcanis.vscode-zipfs",
				"riazxrazor.html-to-jsx"
			]
		},
		"postCreateCommand": "yarn install"
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		3000
	]
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
